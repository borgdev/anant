# Anant Integration Platform Environment Configuration Example
# ===========================================================
# Copy this file to .env and configure the values for your environment

# Environment
ANANT_ENV=development
ANANT_DEBUG=false

# PostgreSQL Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=anant_meta

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password_if_required

# ChromaDB Vector Store Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_PERSIST_DIR=./chroma_data

# Security Configuration (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=change-this-secret-key-in-production
JWT_SECRET_KEY=change-this-jwt-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# API Configuration
API_HOST=0.0.0.0
API_PORT=8079
API_RELOAD=false
API_LOG_LEVEL=info

# Service Configuration
ONTOLOGY_SERVICE_URL=http://localhost:8001
SECURITY_SERVICE_URL=http://localhost:8002
AI_MAPPING_SERVICE_URL=http://localhost:8003
GRAPH_BUILDER_SERVICE_URL=http://localhost:8004

# External Services
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/anant_integration.log

# Performance Configuration
MAX_WORKERS=4
CONNECTION_POOL_SIZE=20
CACHE_TTL=3600

# Development Settings (for development environment only)
DEV_POPULATE_SAMPLE_DATA=true
DEV_AUTO_MIGRATE=true
DEV_CORS_ALLOW_ALL=true